#include <stdio.h>

int main() {
    int n;

    // Ask the user for the number of elements
    printf("Enter the number of elements: ");
    scanf("%d", &n);

    // Create an array of n integers
    int arr[n];

    // Take inputs from the user
    printf("\nEnter %d integer elements:\n", n);
    for (int i = 0; i < n; i++) {
        printf("Element %d: ", i + 1);
        scanf("%d", &arr[i]);
    }

    // Print the array with suitable headings
    printf("\nDisplaying the array elements:\n");
    printf("Index\tValue\n");
    printf("-----\t-----\n");

    for (int i = 0; i < n; i++) {
        printf("%d\t%d\n", i, arr[i]);
    }

    return 0;
}
